# Compose
COMPOSE_PROJECT_NAME=HealthMan
TZ=Africa/Johannesburg


# Postgres
POSTGRES_USER=healthman
POSTGRES_PASSWORD=supersecret_postgres
POSTGRES_DB=healthman_db

# Redis
REDIS_PASSWORD=supersecret_redis

# Wger
WGER_HOST_PORT=8080
WGER_ALLOWED_HOSTS=*
WGER_SECRET_KEY=__WGER_SECRET__
WGER_EXTRA_SETTINGS=/home/wger/src/wger/settings_extra.py
WGER_EXTRA_URLS=/home/wger/src/wger/urls_extra.py

# Tandoor
TANDOOR_HOST_PORT=8081
TANDOOR_SECRET_KEY=__TANDOOR_SECRET__

# n8n (basic auth enabled)
N8N_HOST_PORT=5678
N8N_PORT=5678
N8N_HOST=localhost
N8N_USER=admin
N8N_PASSWORD=admin
N8N_BASIC_AUTH_ACTIVE=true
N8N_ENCRYPTION_KEY=__N8N_ENCRYPTION_KEY__

# Grafana
GRAFANA_HOST_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Caddy (for reverse proxy)
CADDY_ADMIN_EMAIL=you@example.com

# OpenFoodFacts (optional)
OPENFOODFACTS_API_KEY=

# API tokens for internal automation (set after first-run)
WGER_API_TOKEN=__WGER_API_TOKEN__
TANDOOR_API_KEY=__TANDOOR_API_KEY__